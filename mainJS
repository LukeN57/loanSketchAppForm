// Get User Input - State and County
var state = document.getElementById('txt-inState').value,
    county = document.getElementById('txt-inCounty').value 

//Get User Input - Loan Purpose
var inLoanPurpose = document.getElementById('inApplication').r_LoanPurpose,
    purpose;
	
	for (var i = 0; i < inLoanPurpose.length; i++) {
		if (inLoanPurpose[i].checked == true){
			purpose = inLoanPurpose[i].value;
		};
	};

	//Determine Whether Purcahse or Refinance
		var loanPurposeType = function() {
			if (purpose === "Purchase"){
				return "purchase";
			}else return "refinance"
		};

//Get User Input - Occupancy Type
var inLoanOccupancy = document.getElementById('inApplication').r_inOccupancy,
    occupancy;
	
	for (var i = 0; i < inLoanOccupancy.length; i++) {
		if (inLoanOccupancy[i].checked == true){
			occupancy = inLoanOccupancy[i].value;
		};
	};

//Get User Input - Number of Units
var inNumUnits = document.getElementById('inApplication').r_inNumUnits,
    numUnits;
	
	for (var i = 0; i < inNumUnits.length; i++) {
		if (inNumUnits[i].checked == true){
			numUnits = inNumUnits[i].value;
		};
	};
//Get User Input - Purchase Price
var purchasePrice = parseInt(document.getElementById('num-purchasePrice').value)

	//Change Label to Value of Home if Refinance is Selected
	var labelChangePurchasePrice = function(){
		if(loanPurposeType() === "refinance"){
			document.getElementById('purchasePriceLabel').innerHTML = "Value of Home:";
			document.getElementById('downPaymentLabel').innerHTML = "Estimated Value of Home:";
	
	//Add 1st Loan Amount if Refinance is Selected
			//var setFirstLoan = document.createElement("label")
			document.getElementById('loanAmount').innerHTML = '<strong>-OR- 1st Loan Amount</strong' +
				'<br><br>' + '<input type="text" id="setFirstLoan">';
					}
				}; 
	
	//Add Event Listener to Loan Purpose
		document.getElementsByName("r_LoanPurpose").addEventListener("onchange", labelChangePurchasePrice);
		
//Get User Input - Downpayment with option for % or $
	
	
//Get User Input - Loan Type
var loanType = document.getElementById('loanType_select').value

//Get User INput - Loan Product
var loanProduct = document.getElementById('loanProduct_select').value

//Determine Whether Loan is Fixed or ARM
	/*Is there an easier way to just look to see if the data says fixed or if it says arm
	similar to a search or find in Excel?*/
var fixedOrArm = function() {
	if (loanProduct === 'fixed15' ||  loanProduct === 'fixed30') {
		return 'fixed';
	}else return 'arm';
};

//Test
	labelChangePurchasePrice();
	console.log(state);
	console.log(county);
	console.log(purpose);
	console.log(loanPurposeType());
	console.log(occupancy);
	console.log(loanType);
	console.log(loanProduct);
	console.log(fixedOrArm());

